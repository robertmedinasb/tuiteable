<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(current_user), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location, autofocus: true, autocomplete: "location" %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="field-avatar">
    <%= f.label :avatar %>
    <div class="profile__picture_container">
      <label class="btn-upload">
        Upload new image
        <span style="display:none;">
          <%= f.file_field :avatar, id: "fileUploader",class:"custom-file-input"%>
        </span>
      </label>
      <img  class="profile__picture" src="<%=url_for(@user.avatar)%>  " alt="">
    </div>
  </div>
  <div class="field">
    <div class="label">
      <%= f.label :current_password %> <br>
    </div>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  <div class="field">
    <div class="label">
      <%= f.label :password, "New password" %> <br>
    </div>
    <%= f.password_field :password, placeholder: "#{@minimum_password_length} characters minimum...",autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<div class="cancel-account">
  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  <%= link_to "Back", :back %>
</div>
