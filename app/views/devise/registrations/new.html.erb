<h1 class="welcome-title">Welcome to Tuiteable, a new community for developers</h1>
<p class="welcome-description">Please fill the fields to continue, and enjoy!</p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field-signup">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="field-signup">
    <%= f.label :name%>
    <%= f.text_field :name %>
  </div>
  <div class="field-signup">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field-signup">
    <%= f.label :password, class: "password"%>
    <%# <% if @minimum_password_length %>
    <%# <em>(<%= @minimum_password_length characters minimum)</em> %>
    <%# <% end %<br />>
     %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="field-signup">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="field-signup">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  <div class="field-signup-file">
    <%= f.label :avatar %>
    <%= f.file_field :avatar%>
  </div>
  <div class="field-signup-bio">
    <%= f.label :bio%>
    <%= f.text_area :bio, maxlength: 160 %>
  </div>
  <div class="sign_up_button actions">
    <%= f.submit "Create an Account" %>
  </div>
  <div class="actions-face" style="width:fit-content; padding:0 6px">
    <%= link_to  user_facebook_omniauth_authorize_path do%>
      <i class="fab fa-facebook-f"></i>
      Sign up with Facebook
    <% end %>
  </div>
  <div class="actions-git" style="width:fit-content; padding:0 6px">
    <%= link_to  user_github_omniauth_authorize_path do%>
      <i class="fab fa-github"></i>
      Sign up with Github    <% end %>
  </div>
  <%= link_to  "Back", root_path %>
<% end %>
